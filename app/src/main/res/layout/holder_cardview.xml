<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    card_view:cardCornerRadius="4dp"
    card_view:cardElevation="16dp"
    card_view:theme="@style/AlertDialog.AppCompat"
    android:layout_marginTop="8dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:soundEffectsEnabled="true"

    >

    <RelativeLayout
        android:id="@+id/rlRow"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
            android:id="@+id/ivImageIcon"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:background="@drawable/icon_aa"

            />

        <ImageButton
            android:id="@+id/ivImageShare"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="2dp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:src="@drawable/ic_more_vert_black_24dp"
            android:background="@null"

            />

        <LinearLayout
            android:id="@+id/llContactListRowInfo"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/ivImageIcon"
            android:layout_toLeftOf="@+id/ivImageShare"
            android:layout_centerInParent="true"
            >

            <TextView
                android:id="@+id/tvtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center|start"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="8dp"
                android:textColor="@android:color/black"
                android:textStyle="italic"
                android:ellipsize="end"
                android:maxLines="1"
                android:scrollHorizontally="true"
                style="@android:style/TextAppearance.DeviceDefault.Medium"
                />

            <TextView
                android:id="@+id/tvAutor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="16dp"
                android:paddingRight="16dp"
                android:gravity="center|end"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:layout_gravity="end"
                android:textColor="@android:color/darker_gray"
                android:textStyle="italic"
                style="@android:style/TextAppearance.DeviceDefault.Small"
                android:ellipsize="end"
                android:maxLines="1"
                />

        </LinearLayout>

    </RelativeLayout>

</android.support.v7.widget.CardView>